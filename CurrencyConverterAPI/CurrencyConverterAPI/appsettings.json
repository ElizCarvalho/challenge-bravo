{
    "ApiConfiguration": {
        "BaseUrl": "https://api.coinbase.com/v2",
        "CurrencyBallast": "USD"
    },
    "ResiliencePollicy": {
        "retryCount": 3,
        "exceptionsAllowedBeforeBreaking": 5,
        "durationOfBreakInSeconds": 30
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },
        "Filter": [
            {
                "Name": "ByExcluding",
                "Args": {
                    "expression": "@mt = 'An unhandled exception has occurred while executing the request.'"
                }
            }
        ],
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/log-.txt",
                    "rollingInterval": "Day"
                }
            }
        ]
    },
    "AllowedHosts": "*"
}
